

<div class="container-fluid">
  <div class="row d-flex mx-auto my-auto justify-content-center">
    <h2 class="p-3 my-3 mb-0">
      ショップ一覧
    </h2>
    <div class="p-3 my-3 mb-0">
     <%= link_to "+", new_shop_path, class:"btn btn-lg btn-primary rounded-circle" %>
    </div>
  </div>
</div>

<div class="container-fluid mb-5">
  <div class="row d-flex mx-auto my-auto justify-content-center">
    <div class="my-box col-md-6">
      <table class="table table-hover">
        <thead class="thead-light">
		    	<tr>
		    	 <th scope="col">ショップID</th>
		    	 <th scope="col">ショップ名</th>
		    	 <th scope="col">ショップ画像</th>
		    	 <th scope="col"></th>
 		    	 <th scope="col"></th>
		    	</tr>
	      </thead>
		    <tbody>
		      <% @shops.each do |shops| %>
		      <tr>
		       <td>
		        <%= shops.id %>
		       </td>
		       <td>
		        <%= shops.shopname %>
		       </td>
		       <td>
		        <% if shops.image.attached? %>
              <%= image_tag shops.image.variant(resize:'100x150') %>
            <% end %>
		       </td>
		       <td>
		         <%= link_to 'Edit' , edit_shop_path(shops.id), class: "btn btn-sm btn-outline-dark" %>
		       </td>
		       <td>
		        <%= link_to 'delete' , shop_path(shops.id), method: :delete, data:{confirm:'削除しますか？'}, class: "btn btn-sm btn-outline-dark" %>
		       </td>
		      </tr>
		      <% end %>
		     </tbody>
      </table>
    </div>
  </div>
</div>